{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy-workspace-file-on-open",
            "type": "shell",
            "windows":{
                "command": "xcopy",
                "args": [
                    "/d", "/y", "/q", ".\\.vscode\\cmt1.code-workspace", ".\\cmt1.code-workspace"
                ]
            },
            "linux": {
                "command": "cp",
                "args": [
                    "-u", "./.vscode/cmt1.code-workspace", "./cmt1.code-workspace"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "task-mkdir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
